import pandas as pd
from scipy import stats
import matplotlib.pyplot as dhruv
a=pd.read_csv(r"C:\Users\HP\OneDrive\Desktop\code\pandas\Iris.csv")
del a["Species"]
del a["Id"]
feature=["SepalLengthCm","SepalWidthCm","PetalLengthCm","PetalWidthCm"]
for i in feature:
    value=a[feature]
    print("       ")
    print("MEAN")
    print(value.mean())
    break
for j in feature:
    value=a[feature]
    print("       ")
    print("MEDIAN")
    print(value.median())
    break
for k in feature:
    value=a[feature]
    print("       ")
    print("MODE")
    print(value.mode())
    break
for l in feature:
    value=a[feature]
    print("       ")
    print("STANDARD DEVIATION")
    print(value.std())
    break
for m in feature:
    value=a[feature]
    print("       ")
    print("STANDARD ERROR")
    print(stats.sem(value))
    break
for m in feature:
    value=a[feature]
    mean=value.mean()
    std=value.std()
    print("       ")
    print("CONFIDENCE INTERVAL")
    n=len(value)
    confidence_level=0.95
    alpha=1-confidence_level
    confidence_interval=stats.t.interval(confidence_level,df=n-1,loc=mean,scale=std/n**0.5)
    print(confidence_interval)
    break
a.corr()
dhruv.imshow(a.corr(),vmin=-1,vmax=1,cmap="autumn")
dhruv.xticks(range(len(a.columns)),a.columns,rotation=30)
dhruv.yticks(range(len(a.columns)),a.columns,rotation=30)
dhruv.title("HEATMAP")
print("COVARINCE: ",a["SepalLengthCm"].cov(a["PetalLengthCm"]))
contingency_table=pd.crosstab(a["PetalLengthCm"],a["SepalLengthCm"])
print(contingency_table)
